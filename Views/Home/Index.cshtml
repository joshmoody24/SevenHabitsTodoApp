@{
    ViewData["Title"] = "Home Page";
}

@model List<TaskEntry>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="matrix">
    <div class="row" id="title">STEPHEN COVEY'S TIME MANAGEMENT MATRIX</div>
    <div>
        <div class="col-2 first"></div>
        <div class="col-6 first"><span>URGENT</span></div>
        <div class="col-5 second"><span>NOT URGENT</span></div>
    </div>
    <div class="row upper">
        <div class="col-2 first"><span>IMPORTANT</span></div>
        <div class="col-2 q">
            <p style="font-weight: bold">Quadrant 1</p>
            <div class="quad">
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 1)
                    {
                        <div style="display:flex;">
                            <div class="name">@x.Task</div>
                            <div>
                                <a asp-controller="Home" asp-action="EditTask" asp-route-taskid="@x.TaskID">Edit</a>
                                <br />
                                <a asp-controller="Home" asp-action="DeleteTask" asp-route-taskid="@x.TaskID">Delete</a>
                                <br />
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-5">
            <p style="font-weight: bold">Quadrant 2</p>
            <div class="quad">
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 2)
                    {
                        <div style="display:flex;">
                            <div class="name">@x.Task</div>
                            <div>
                                <a asp-controller="Home" asp-action="EditTask" asp-route-taskid="@x.TaskID">Edit</a>
                                <br />
                                <a asp-controller="Home" asp-action="DeleteTask" asp-route-taskid="@x.TaskID">Delete</a>
                                <br />
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="row">
            <div class="col-2 first"><span>NOT IMPORTANT</span></div>
            <div class="col-2 q">
                <p style="font-weight: bold">Quadrant 3</p>
                <div class="quad">
                    @foreach (var x in Model)
                    {
                        if (x.Quadrant == 2)
                        {
                            <div style="display:flex;">
                                <div class="name">@x.Task</div>
                                <div>
                                    <a asp-controller="Home" asp-action="EditTask" asp-route-taskid="@x.TaskID">Edit</a>
                                    <br />
                                    <a asp-controller="Home" asp-action="DeleteTask" asp-route-taskid="@x.TaskID">Delete</a>
                                    <br />
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="col-5">
                <p style="font-weight: bold">Quadrant 4</p>
                <div class="quad">
                    @foreach (var x in Model)
                    {
                        if (x.Quadrant == 4)
                        {
                            <div style="display:flex;">
                                <div class="name">@x.Task</div>
                                <div>
                                    <a asp-controller="Home" asp-action="EditTask" asp-route-taskid="@x.TaskID">Edit</a>
                                    <br />
                                    <a asp-controller="Home" asp-action="DeleteTask" asp-route-taskid="@x.TaskID">Delete</a>
                                    <br />
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>